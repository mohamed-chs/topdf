{
  "name": "convpdf",
  "version": "0.5.2",
  "license": "MIT",
  "description": "Convert Markdown to high-quality PDF",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "convpdf": "dist/bin/convpdf.js"
  },
  "exports": {
    ".": {
      "import": "./dist/src/renderer.js",
      "types": "./dist/src/renderer.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "markdown",
    "pdf",
    "converter",
    "puppeteer",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamed-chs/convpdf.git"
  },
  "homepage": "https://github.com/mohamed-chs/convpdf#readme",
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "typecheck": "tsc -p tsconfig.json",
    "build": "npm run clean && tsc -p tsconfig.build.json && node scripts/copy-styles.mjs",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit.test.ts",
    "test:cli": "vitest run tests/cli.test.ts",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "npm run typecheck && npm run lint && npm run format:check && npm run build && npm test",
    "prepublishOnly": "npm run ci",
    "dev": "tsx bin/convpdf.ts"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.3",
    "github-slugger": "^2.0.0",
    "glob": "^13.0.2",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.1",
    "marked-footnote": "^1.4.0",
    "marked-highlight": "^2.2.3",
    "minimatch": "^10.2.1",
    "p-limit": "^7.3.0",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.37.2",
    "tar": "^7.5.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cli-progress": "^3.11.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
